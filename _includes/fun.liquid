<div class="col">
  <a href="{% if fun.redirect %}{{ fun.redirect }}{% else %}{{ fun.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if fun.img %}
        {%
          include figure.liquid
          loading="eager"
          path=fun.img
          sizes = "250px"
          alt="fun thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ fun.title }}</h2>
        <p class="card-text">{{ fun.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if fun.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ fun.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if fun.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ fun.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
